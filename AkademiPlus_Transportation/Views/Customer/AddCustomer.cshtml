@model AkademiPlus_Transportation.Models.TblCustomer
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Müşteri Girişi</h2>
<br />
<form method="post">

    <label>Müşteri ADI:</label>
    @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
    <br />
    <label>Müşteri SOYADI:</label>
    @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control" })
    <br />
    <label>ŞEHRİ:</label>
    @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
    <br />
    <label>Müşteri TELEFON:</label>
    @Html.TextBoxFor(x => x.CustomerPhone, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary"> Müşteri Ekle </button>

</form>

