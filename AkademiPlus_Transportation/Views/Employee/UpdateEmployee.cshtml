@model AkademiPlus_Transportation.Models.TblEmployee
@{
    ViewBag.Title = "UpdateEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Personel Güncelleme Sayfası</h2>
<br />
<form method="post">

    @Html.HiddenFor(x=>x.EmployeeID)
    <label>Personel ADI:</label>
    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
    <br />
    <label>Personel SOYADI:</label>
    @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
    <br />
    <label>Personel Görsel URL:</label>
    @Html.TextBoxFor(x => x.Employeeimage, new { @class = "form-control" })
    <br />
    <label>Personel AÇIKLAMASI:</label>
    @Html.TextAreaFor(x => x.EmployeeDescription, 5, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-default"> Personel Güncelle</button>

</form>


