@model List<AkademiPlus_Transportation.Models.TblProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h2>Ürünler Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th style="background-color:cadetblue">#</th>
        <th style="background-color:cadetblue">Ürün ADI</th>
        <th style="background-color:cadetblue">Ürün BOYUT</th>
        <th style="background-color:cadetblue">Ürün DETAYLARI</th>
        <th style="background-color:cadetblue">SİL</th>
        <th style="background-color:cadetblue">GÜNCELLE</th>
    </tr>
    @foreach(var item in Model)
            {
        sayac++;
                <tr>
                    <td>@sayac</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductSize</td>
                    <td>@item.ProductDescription</td>
                    <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-default">Sil</a></td>
                    <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-default">Güncelle</a></td>
                </tr>
            }

</table>
<a href="/Product/AddProduct/" class="btn btn-default">Yeni Ürün Ekle</a>

